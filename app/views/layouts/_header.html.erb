<header>
  <nav class="fixed-top navbar navbar-expand-lg navbar-dark" style="background-color :#e6bfb2;">
    <% if admin_signed_in? %>
      <%= link_to admin_users_path, class: "nav-link text-dark" do %>
       <%= image_tag 'nagano_cake_logo.png', size: '180x70' %>
      <% end %>
    <% else %>
      <%= link_to root_path, class: "nav-link text-dark" do %>
       <%= image_tag 'nagano_cake_logo.png',size: '180x70' %>
      <% end %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav" style="justify-content:flex-end;margin:0 30px">
      <div>
        <div class="row">
          <ul class="navbar-nav ml-auto">
          <% if admin_signed_in? %>
            <li class="nav-item mx-3">
              <%= link_to '会員一覧', admin_users_path, class: "nav-link text-light btn btn-outline-light" %>
            </li>
            <li class="nav-item mx-3">
              <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link text-light btn btn-outline-light' %>
            </li>
          <% elsif user_signed_in? %>
            <li class="nav-item mx-3">
              <%= link_to new_post_path do %>
              <i class="fa-solid fa-circle-plus"></i>
              <% end %>
            </li>
            <li class="nav-item mx-3">
              <%= link_to 'マイページ', user_path(current_user), class: "nav-link text-light btn btn-outline-light" %>
            </li>
            <li class="nav-item mx-3">
              <%= link_to '投稿一覧', posts_path, class: "nav-link text-light btn btn-outline-light" %>
            </li>
            <li class="nav-item mx-3">
              <%= link_to 'ユーザー一覧', users_path, class: "nav-link text-light btn btn-outline-light" %>
            </li>
            <li class="nav-item mx-3">
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link text-light btn btn-outline-light' %>
            </li>
          <% else %>
            <li class="nav-item mx-3">
              <%= link_to '新規登録', new_user_registration_path, class: "nav-link text-light btn btn-outline-light" %>
            </li>
            <li class="nav-item mx-3">
              <%= link_to 'ログイン', new_user_session_path, class: 'nav-link text-light btn btn-outline-light' %>
            </li>
            <li class="nav-item mx-3">
              <%= link_to '投稿一覧', posts_path, class: "nav-link text-light btn btn-outline-light" %>
            </li>
             <li class="nav-item mx-3">
              <%= link_to 'About', about_path, class: "nav-link text-light btn btn-outline-light" %>
            </li>
          <% end %>
        </ul>
        </div>
        <div class="row" style="display:flex; justify-content:flex-end; margin-top:5px; margin-right: 3px;">
          <%= render 'searches/search_form' %>
        </div>
      </div>
    </div>
  </nav>
</header>
