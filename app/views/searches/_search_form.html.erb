<% if admin_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :name,size: "15",placeholder: "ユーザー" %>
      <%= f.hidden_field :range, :value => 'User' %>
      <%= f.hidden_field :search, :value => "partial_match" %>
      <%= f.submit "検索", class: "btn-sm btn-primary" %>
    <% end %>
  </div>
<% else %>
  <div class="search-form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word, size: "15" %>
      <%= f.select :range, options_for_select([['ユーザー'], ['投稿'],['タグ']]) %>
      <%= f.hidden_field :search, :value => "partial_match" %>
      <%= f.submit "検索", class: "btn btn-sm btn-primary" %>
    <% end %>
<% end %>