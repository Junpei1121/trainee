<div class='container'>
  <div class='row'>
     <div class='col-md-8 offset-md-1 my-3'>
       <h5>通知</h5>
        <% if @notifications.present? %>
          <%= link_to "全削除",notification_path(@notifications), method: :delete,class: "btn btn-danger mb-3 text-white" %>
            <% @notifications.each do |notification| %>
            <div class="bg-white rounded mb-2" alt="200x200">
              <%= render "#{notification.action_type}", notification: notification %>
            </div>
            <% end %>
        <% else %>
          通知はありません
        <% end %>
     </div>
  </div>
</div>