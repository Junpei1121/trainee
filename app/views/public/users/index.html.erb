<div class='container px-5 px-sm-0 py-3'>
  <div class='row'>
    <div class='col-md-8'>
      <h5>ユーザー一覧</h5>
      <table class='table'>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                <%= image_tag user.get_profile_image(50,50) %>
                <% end %>
              </td>
              <td><%= link_to user.name, user_path(user) %></td>
              <td><%= user.introduction %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>  
