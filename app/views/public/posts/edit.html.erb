<div class='container'>
  <div class='row'>
     <div class='col-md-8 offset-md-1 my-3'>
       <% if @post.errors.any? %>
        <div class="alert alert-danger my-3" role="alert">
          <% @post.errors.full_messages.each do |message| %>
            <p><%= message.gsub("Body", "投稿") %></p>
          <% end %>
        </div>
      <% end %>
       <h5>投稿編集</h5>
       <%= render 'public/posts/form', post: @post %>
     </div>
  </div>
</div>

